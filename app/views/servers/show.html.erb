<div class="container">
  <div class="starter-template">
    <h1><%= @server.name %></h1>

    <div id="container" style="width:100%; height:400px;"></div>
  </div>
</div>
<script src="http://code.highcharts.com/highcharts.js"></script>
<script type="text/javascript">
  $(function () {
    $('#container').highcharts({
        chart: {
            type: 'line'
        },
        title: {
            text: 'CPU Usage last 30 minutes'
        },
        xAxis: {
            labels: {
                formatter: function () {
                    return this.value
                }
            },
        },
        yAxis: {
            title: {
                text: 'CPU%'
            }
        },
        series: [{
            name: 'CPU %',
            data: <%= raw(@cpu_data) %>
        }]
    });
});
</script>
