<div class="container">
  <div class="starter-template">
    <h1><%= @server.name %></h1>

    <%= form_tag server_path, id: 'time_selection' do %>
        <%= select_tag('timeperiod', options_for_select([['1 hour', 1], ['24 hours', 2], ['1 week', 3], ['1 month', 4]], params['timeperiod'])) %>
    <% end %>
    </form>

    <div id="chart" style="width:100%; height:400px;"></div>

    <div id="events">
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th>Message</th>
          <th>Created on</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
            <% @server.events.each do |event| %>
                <tr>
                  <td><%= event.message %></td>
                  <td><%= event.created_at %></td>
                  <td>Hide</td>
                </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#chart').highcharts({
            chart: {
                type: 'line'
            },
            title: {
                text: 'Usage %'
            },
            xAxis: {
                type: 'datetime'
            },
            yAxis: {
                title: {
                    text: 'Usage %'
                },
                min: 0
            },
            plotOptions: {
                line: {
                    marker: {
                        enabled: false
                    }
                },
                series: {
                    //step: 'left'
                }
            },
            series: [
                {
                    name: 'CPU Usage %',
                    data: <%= raw(@cpu_data) %>
                },
                {
                    name: 'Mem Usage %',
                    data: <%= raw(@memory_data) %>
                }
            ]
        });
    });
</script>
