<div class="container">
  <div class="starter-template">
    <h1><%= @server.name %></h1>

    <%= form_tag server_path, id: 'time_selection' do %>
        <%= select_tag('timeperiod', options_for_select([['30 minutes', 1], ['2 hours', 2], ['24 hours', 3], ['1 week', 4]], params['timeperiod'])) %>
    <% end %>
    </form>

    <div id="chart" style="width:100%; height:400px;"></div>
  </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#chart').highcharts({
            chart: {
                type: 'spline'
            },
            title: {
                text: 'Usage %'
            },
            xAxis: {
                type: 'datetime'
            },
            yAxis: {
                title: {
                    text: 'Usage %'
                },
                min: 0
            },
            plotOptions: {
                spline: {
                    marker: {
                        enabled: false
                    }
                },
            },
            series: [
                {
                    name: 'CPU Usage %',
                    data: <%= raw(@cpu_data) %>
                },
                {
                    name: 'Mem Usage %',
                    data: <%= raw(@memory_data) %>
                }
            ]
        });
    });
</script>
